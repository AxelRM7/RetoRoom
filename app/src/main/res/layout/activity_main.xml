<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TVUId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID de usuario:"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ETUId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/TVUId"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/TVUName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de usuario:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/ETUId"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ETUName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/TVUName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/TVUHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura de usuario:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/ETUName"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ETUHeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/TVUHeight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/TVUWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="peso de usuario:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/ETUHeight"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ETUWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/TVUWeight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/TVUEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email de usuario:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/ETUWeight"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ETUEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/TVUEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/TVUPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password de usuario:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/ETUEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ETUPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/TVUPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_user"
        app:layout_constraintTop_toBottomOf="@id/BTNGuardar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/BTNGuardar"
        />
    <Button
        android:id="@+id/BTNGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        app:layout_constraintTop_toBottomOf="@id/ETUPassword"
        app:layout_constraintLeft_toLeftOf="parent"

        />




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>